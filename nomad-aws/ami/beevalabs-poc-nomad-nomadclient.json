{
    "variables":{
        "version": "0.1",
        "consul": "consul:1.0.0",
        "nomad": "0.6.3"
    },
    "builders":[
        {
            "type": "amazon-ebs",
            "region":"eu-west-2",
            "instance_type": "t2.micro",
            "ami_name": "beevalabs-poc-nomad-nomadclient-{{ user `version` }}",
            "ssh_username": "core",
            "tags":{
                "OS_Version":"CoreOS"
            },
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                     "name": "CoreOS-stable-*",
                     "root-device-type": "ebs"
                },
                "most_recent": true
			}
        }
	],
	"provisioners":[
        {
            "type": "file",
            "source": "setup-consulclient.sh",
            "destination": "/tmp/setup-consulclient.sh"
        },
        {
            "type": "file",
            "source": "setup-nomadclient.sh",
            "destination": "/tmp/setup-nomadclient.sh"
        },
		{
            "type":"shell",
            "inline":[
                "sudo systemctl enable docker",
                "/tmp/setup-consulclient.sh {{ user `consul` }}",
                "/tmp/setup-nomadclient.sh {{ user `nomad` }}"
            ]
        }
    ]
}

